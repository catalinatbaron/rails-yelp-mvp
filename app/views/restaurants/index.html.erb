<html>
  <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.0/css/bootstrap.min.css" integrity="sha384-PDle/QlgIONtM1aqA2Qemk5gPOE7wFq8+Em+G/hmo5Iq0CCmYZLv3fVRDJ4MMwEA" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    </head>
  <body>
    <div class="container text-center">
      <div class="row">
        <div class="col">
            <h1>My restaurants</h1>
            <ul>
            <% @restaurants.each do |restaurant| %>
              <li><%= restaurant.name %> <%= link_to 'Details', restaurant_path(restaurant) %> <%= link_to 'Add a review', new_restaurant_review_path(restaurant)%> <%= link_to 'Edit', edit_restaurant_path(restaurant) %> <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, restaurant_path(restaurant), method: :delete %> </li>
            <% end %>
            </ul>
            <h3 class= 'btn btn-primary'><%= link_to 'Add a new Restaurant!', new_restaurant_path(@restaurant) %></h3>
        </div>
      </div>
    </div>
  </body>
</html>


